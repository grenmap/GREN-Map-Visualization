{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings",
    ],
    "paths": {},
    "allowSyntheticDefaultImports": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableIvy": "true",
    "compilationMode": "full",
    "type": "module",
  },
  "exclude": [
    "node_modules/**"
  ]
}
